@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityUser>
@{
    ViewBag.Title = "Add User";
}


<table>
    <tr>
        <td align="center" colspan="2">
            <h2>Current Users</h2>
        </td>
    </tr>
    <tr>
        <td>
            <table>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.UserName
                        </td>
                        <td>
                            @Html.ActionLink("Edit user", "UserEdit", new { id = item.Id })
                            @Html.ActionLink("Delete user", "UserDelete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </table>
        </td>
    </tr>
</table>

<h3>@Html.ActionLink("Click to Create New Admin", "AdminCreate", "Admin") </h3>

<button id="btnAddField">Add Field</button>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="fields"></div>

    <button>Submit</button>
}

<div style="color:blue"><b>Data:</b> @ViewBag.Data</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        var $fields = $('#fields');
        $('#btnAddField').click(function (e) {
            e.preventDefault();
            $('<input type="text" name="dynamicField" /><br/>').appendTo($fields);
        });
    });

</script>