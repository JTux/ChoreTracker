@using Microsoft.AspNet.Identity
@using ChoreTracker.WebMVC.DataContract.Comment
@model CommentListItemDTO

<div class="user-comment">
    <h6 class="comment-poster">
        @Model.Poster:
    </h6>
    @Html.DisplayFor(Model => Model.Content)
</div>
<div class="comment-option">
    @if (Model.OwnerId == Guid.Parse(User.Identity.GetUserId()))
    {
        @Html.ActionLink("Delete", "Delete", "Comment", new { id = Model.CommentId }, new { @class = "comment-button" })
        @Html.ActionLink("Edit", "Edit", "Comment", new { id = Model.CommentId }, new { @class = "comment-button" })
    }
    @Html.ActionLink("Reply", "Edit", "Comment", new { id = Model.CommentId }, new { @class = "comment-button" })
</div>
@{
    var comment = new CommentCreateDTO { ParentId = Model.CommentId, GroupId = Model.GroupId };
}
<div class="comment-button">
    @Html.Partial("~/Views/Comment/_CommentReply.cshtml", comment)
</div>
