@model IEnumerable<ChoreTracker.WebMVC.DataContract.Group.GroupListItemDTO>

@{
    ViewBag.Title = "MyGroups";
}

<h2>MyGroups</h2>

<p>
    @Html.ActionLink("Create New", "Create") |
    @Html.ActionLink("Join Group", "Join")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GroupName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InGroup)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InGroup)
            </td>
            <td>
                @Html.ActionLink("Details", "Index", new { id = item.GroupId }) | 
                @Html.ActionLink("Rewards", "Index", "Reward", new { id = item.GroupId }, null)
            </td>
        </tr>
    }

</table>
