    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RewardId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RewardName)
        </th>
