                @Html.DisplayFor(modelItem => item.RewardName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RewardDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RewardCost)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.RewardId }) |
